<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F4F3F3"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RecyclerView.RecyclerView_ThongKe_admin">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#F4F3F3"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/thoat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Thoát"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Thống kê"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="25dp"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/tv_fromdate"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="Từ ngày"
        android:textColor="#000000"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@drawable/border"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_arrow_downward_24"/>

    <TextView
        android:id="@+id/tv_todate"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Đến ngày"
        android:textColor="#000000"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/btn_check"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Đồng ý"
        android:textColor="#fff"
        android:background="@drawable/border5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng đơn đặt hàng"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_sumoder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doanh số"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_summoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>